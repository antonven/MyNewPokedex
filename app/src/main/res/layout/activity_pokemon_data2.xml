<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="myapps.wycoco.com.mynewpokedex.Activities.PokemonDataActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/pokeName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="BALBASAUR"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Type: "
            android:layout_below="@+id/pokeName"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />
        <TextView
            android:id="@+id/pokeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Type: "
            android:layout_below="@+id/pokeName"
            android:layout_toRightOf="@+id/a"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Weight: "
            android:layout_below="@+id/pokeType"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:id="@+id/s" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Weight: "
            android:id="@+id/pokeWeight"
            android:layout_below="@+id/pokeType"
            android:layout_alignLeft="@+id/pokeType" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Height: "
            android:textStyle="bold"
            android:layout_below="@+id/pokeWeight"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:id="@+id/d" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Height: "
            android:id="@+id/pokeHeight"
            android:layout_below="@+id/pokeWeight"
            android:layout_alignLeft="@+id/pokeWeight"
            android:layout_alignStart="@+id/pokeWeight" />
        <TextView
            android:id="@+id/pokeVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Version: "
            android:layout_below="@+id/pokeHeight"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />
    </RelativeLayout>


</RelativeLayout>
