<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32070A"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:background="#fff"
            android:paddingRight="10dp"
            android:layout_marginStart="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/pokeName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="BALBASAUR"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="Type: "
            android:layout_below="@+id/pokeName"
            android:layout_alignLeft="@+id/pokeName"
            android:layout_alignStart="@+id/pokeName" />
        <TextView
            android:id="@+id/pokeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignBaseline="@+id/a"
            android:textColor="#fff"
            android:textSize="14sp"
            android:typeface="monospace"
            android:layout_below="@+id/pokeName"
            android:layout_toRightOf="@+id/a"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Weight: "
            android:id="@+id/s"
            android:layout_below="@+id/a"
            android:layout_alignLeft="@+id/a"
            android:layout_alignStart="@+id/a" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#fff"
            android:textSize="14sp"
            android:text="Weight: "
            android:id="@+id/pokeWeight"
            android:layout_alignBaseline="@+id/s"
            android:layout_alignBottom="@+id/s"
            android:layout_toRightOf="@+id/s"
            android:layout_toEndOf="@+id/s" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Height: "
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/d"
            android:layout_below="@+id/s"
            android:layout_alignLeft="@+id/s"
            android:layout_alignStart="@+id/s" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="14sp"
            android:padding="5dp"
            android:text="Height: "
            android:id="@+id/pokeHeight"
            android:layout_alignBaseline="@id/d"
            android:layout_alignBottom="@+id/d"
            android:layout_toRightOf="@+id/s"
            android:layout_toEndOf="@+id/s" />
        <!--<TextView-->
            <!--android:id="@+id/pokeVersion"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="5dp"-->
            <!--android:text="Version: "-->
            <!--android:layout_below="@+id/pokeHeight"-->
            <!--android:layout_toRightOf="@+id/imageView"-->
            <!--android:layout_toEndOf="@+id/imageView" />-->
    </RelativeLayout>


</RelativeLayout>
