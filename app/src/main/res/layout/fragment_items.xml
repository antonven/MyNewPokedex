<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:id="@+id/cardView"
    app:cardElevation="10dp"
    android:layout_marginTop="15dp"
    tools:context="myapps.wycoco.com.mynewpokedex.Fragments.ItemsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pokeballImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="150dp"

            android:layout_height="40dp"
            android:layout_below="@+id/pokeballImage"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemEffect"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignTop="@+id/pokeballImage"
            android:layout_toRightOf="@+id/itemName"
            android:layout_toEndOf="@+id/itemName" />


    </RelativeLayout>


</android.support.v7.widget.CardView>
